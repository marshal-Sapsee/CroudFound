@page "{id}"
@model CroudFoundSite.Pages.Account.AccountDetailModel
@{
    ViewData["Title"] = "Информация о пользователе";
    var photoPath = $"/images/noimage.png";
}
<br />
<h1 class="card-header-pills"> Информация о пользователе</h1>

<div class="row justify-content-center m-3">
    <div class="col col-lg-8">
        <div class="card cardBoxShadow">
            <div class="card-header cardHeaderStyle">
                <h1>@Model.Account.Email</h1>
            </div>
            <div class="card-body cardBoxShadow text-center">
                <div class="row">
                    <div class="col col-lg-9">
                        <h4 class="cardTextLeftFloating">Идентификатор: @Model.Account.Id</h4>

                        <h4 class="cardTextLeftFloating">Имя: @Model.Account.Name @Model.Account.SurName</h4> <hr />

                        <h4 class="cardTextLeftFloating">Дата рождения: @Model.Account.Birth</h4>

                        <h4 class="cardTextLeftFloating">Телефон: @Model.Account.PhoneNumber</h4>

                        <h4 class="cardTextLeftFloating">Страна: @Model.Account.Country</h4>

                        <h4 class="cardTextLeftFloating">Адрес: @Model.Account.Region,@Model.Account.City, @Model.Account.Address, @Model.Account.PostalCode</h4>

                        <h4 class="cardTextLeftFloating">Тип аккаунта: @Model.Account.accountType</h4>
                    </div>
                    <div class="col col-lg-3">
                        <div style="border-right: 1px solid rgba(0,0,0,.1);">
                            <img class="card-img-top imageThumbnail border border-primary" style="background-color: #dle7ff" src="@photoPath" asp-append-version="true" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="card-footer text-center" style="background-color: rgba(0,0,0,0.25);">
                            <a asp-page="/Account/AllUsers" class="btn btn-success buttonShadow">Назад</a>
                            <a href="#" class="btn btn-primary buttonShadow">Редактировать</a>
                            <a href="#" class="btn btn-danger buttonShadow">Удалить</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
